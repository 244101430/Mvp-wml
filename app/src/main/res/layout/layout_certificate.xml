<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    tools:context="com.lantu.andorid.mvp_wml.ui.screenshot.ScreenshotActivity">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bt_screenshot"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#5d5d4c"
                android:gravity="center"
                android:text="截屏视图"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#9d7f78"
                android:gravity="center"
                android:text="截屏视图"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#383825"
                android:gravity="center"
                android:text="截屏视图"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#bebe6d"
                android:gravity="center"
                android:text="截屏视图"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#7b7b19"
                android:gravity="center"
                android:text="截屏视图"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#5d5d4c"
                android:gravity="center"
                android:text="截屏视图"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#b6c3c5"
                android:gravity="center"
                android:text="截屏视图"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:scaleType="fitXY" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
