<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/common_head_toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="?attr/colorPrimary"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/common_head_back"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/iv_back_selector"
                        android:clickable="true"
                        android:scaleType="center"
                        android:src="@drawable/back" />

                    <LinearLayout
                        android:id="@+id/common_head_finish_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:visibility="invisible">

                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:background="#10ffffff" />

                        <ImageView
                            android:id="@+id/common_head_finish"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/iv_back_selector"
                            android:clickable="true"
                            android:scaleType="center"
                            android:src="@mipmap/cha" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/common_head_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="title"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <LinearLayout
                    android:id="@+id/common_head_right2_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/common_head_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:visibility="invisible">


                        <ImageView
                            android:id="@+id/common_head_right2"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/iv_back_selector"
                            android:clickable="true"
                            android:scaleType="center"
                            android:src="@mipmap/cha" />

                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:background="#10ffffff" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/common_head_right1"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/iv_back_selector"
                        android:clickable="true"
                        android:scaleType="center"
                        android:src="@drawable/back"
                        android:visibility="invisible" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/common_head_net_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffc0c0"
        android:gravity="center"
        android:padding="10dp"
        android:text="网络连接不可用"
        android:textSize="15sp"
        android:visibility="gone" />
</LinearLayout>
